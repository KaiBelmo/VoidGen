{
  "/api/posts": {
    "GET": {
      "delay": 100
    },
    "POST": {
      "delay": 300,
      "validation": {
        "requiredFields": ["title", "author"],
        "errorStatus": 400
      }
    }
  },
  "/api/posts/:id": {
    "GET": {
      "delay": 120
    },
    "PUT": {
      "delay": 300,
      "validation": {
        "requiredFields": ["title", "author"],
        "errorStatus": 400
      }
    },
    "DELETE": {
      "delay": 150
    }
  },
  "/api/comments": {
    "GET": {
      "delay": 100
    },
    "POST": {
      "delay": 250,
      "validation": {
        "requiredFields": ["body", "postId"],
        "errorStatus": 400
      }
    }
  },
  "/api/comments/:id": {
    "GET": {
      "delay": 120
    },
    "DELETE": {
      "delay": 150
    }
  },
  "/api/profile": {
    "GET": {
      "delay": 200
    },
    "PUT": {
      "delay": 400,
      "validation": {
        "requiredFields": ["name", "age"],
        "errorStatus": 400
      }
    }
  },
  "/api/smth": {
    "GET": {
      "delay": 100
    },
    "PUT": {
      "delay": 200,
      "validation": {
        "requiredFields": ["job"],
        "errorStatus": 400
      }
    }
  },
  "/api/slow-api": {
    "GET": {
      "delay": 5000
    }
  }
}
